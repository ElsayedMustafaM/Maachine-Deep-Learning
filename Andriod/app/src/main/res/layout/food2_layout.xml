<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear"
android:orientation="vertical"
    android:background="@drawable/ss"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:paddingTop="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageview"
                />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="النوع : "
            android:textColor="#000000"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/type"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/txt1" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt1"
            android:text="عدد السعرات  : "
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/nocolories"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/button2"
            android:layout_toLeftOf="@+id/txt2"
            android:layout_toStartOf="@+id/txt2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/backgroundfront"
            android:onClick="AddToFavorite"
            android:text="اضافة للمفضلات"
            android:textSize="20dp" />
    </RelativeLayout>


</LinearLayout>